<div class="p-2 m-2 border border-dark">

    <h2>@VacancyData.Title</h2>
    <div class="row">
        <div class="col-6">
            Closing date
        </div>
        <div class="col-6">
            @VacancyData.ClosingDate.ToString("yyyy-MM-dd")
        </div>
        @if (ViewAnonymizedData)
        {
            <AddressComponent Address="@VacancyData.Address" />
        }
    </div>
    <hr />
    <h2>Applications</h2>
    <div class="row m-1">
        @foreach (Application a in VacancyData.Applications)
        {
            <div class="col-6 py-2 border border-dark">
                <ApplicationComponent Application="@a" />
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public VacancyData VacancyData { get; set; }

    [CascadingParameter(Name = "ViewAnonymizedData")]

    public bool ViewAnonymizedData { get; set; }
}